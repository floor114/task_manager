%h2 Change your password
= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
  = devise_error_messages!
  = f.hidden_field :reset_password_token
  .field
    = f.password_field :password, autofocus: true, autocomplete: 'off', hide_label: true, placeholder: 'Password'
  .field
    = f.password_field :password_confirmation, autocomplete: 'off', hide_label: true, placeholder: 'Password confirmation'
  .actions
    = f.submit 'Change my password', class: 'btn btn-default btn-primary'
= render 'devise/shared/links'
