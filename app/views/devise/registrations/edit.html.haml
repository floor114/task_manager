%h2
  Edit #{resource_name.to_s.humanize}
= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
  .field
    = f.email_field :email, autofocus: true, hide_label: true, placeholder: 'Email'
  - if devise_mapping.confirmable? && resource.pending_reconfirmation?
    %div.text-muted
      Currently waiting confirmation for: #{resource.unconfirmed_email}
  .field
    = f.password_field :password, autocomplete: 'off', hide_label: true, placeholder: 'New password'
  .field
    = f.password_field :password_confirmation, autocomplete: 'off', hide_label: true, placeholder: 'Password confirmation'
  .field
    = f.password_field :current_password, autocomplete: 'off', hide_label: true, placeholder: 'Current password'
  .actions
    = f.submit 'Update', class: 'btn btn-default btn-primary'
