var tasks_table = $("#tasks-table")

<% @ids.each do |id| %>
  <% publish_to "/tasks/#{id}" do %>
    $("#task-<%= @task.id %>").fadeOut(function(){
      $(this).remove();
      tasks_table.html('<%= escape_javascript(render partial: 'tasks/tasks_table', locals: { tasks: User.find(id).tasks }) %>');
    });
  <% end %>
<% end %>




