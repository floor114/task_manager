var tasks_table = $("#tasks-table")

<% @ids.each do |id| %>
  <% publish_to "/tasks/#{id}" do %>
    $("#task-<%= @task.id %>").fadeOut(function(){
      $(this).remove();
      <% user = User.find(id) %>
      tasks_table.html('<%= escape_javascript(render partial: 'tasks/tasks_table', locals: { tasks: user.tasks, user: user }) %>');
    });
  <% end %>
<% end %>
