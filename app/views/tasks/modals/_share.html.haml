= bootstrap_form_tag url: share_task_path(task), html: { remote: true, method: :post } do |f|
  .modal-header
    %button.close{ data: { dismiss: 'modal', type: 'button' } } &times;
    %h4.modal-title Choose user
  .modal-body
    = f.select :user, options_from_collection_for_select(User.all_except(task.users), :id, :email)
  .modal-footer
    = f.submit 'Share', class: 'btn btn-info', data: { target: '#tasks-modal', toggle: :modal }